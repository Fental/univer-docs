--- 
import { ViewTransitions } from 'astro:transitions'
import Footer from '@/components/Footer/index.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="zh-Hans" class="scroll-smooth text-sm md:text-sm lg:text-base">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="baidu-site-verification" content="codeva-HDScjD6Jr2" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <ViewTransitions />
</head>

<body class="overflow-x-auto md:min-w-768px">
  <section data-univer-body class="transition-transform transform-duration-500">
    <slot />

    <Footer />
  </section>
</body>
</html>

<style is:global>
@font-face {
  font-family: 'SourceHanSansSC';
  src: url('/fonts/SourceHanSansSC-VF.otf.woff2');
}

html {
  font-family: SourceHanSansSC;
}
</style>
